<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/activity_main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin">

	<EditText
			android:id="@+id/input"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="@dimen/input_height"
			android:background="@drawable/edittext_style_border"
			android:textSize="@dimen/text_normal"
			android:textColor="@color/grey_anthracite"
			android:paddingLeft="@dimen/text_padding"
			android:paddingRight="@dimen/text_padding"
			android:hint="@string/hint_text_to_speech"/>

	<Button
			android:id="@+id/button"
			android:layout_marginTop="@dimen/content_vertical_margin"
			android:layout_width="match_parent"
			android:layout_height="@dimen/button_height"
			android:background="@drawable/button_style"
			android:text="@string/speak"
			android:textColor="@color/white"
			android:textSize="@dimen/text_big"/>

	<Button
			android:id="@+id/clear"
			android:layout_marginTop="@dimen/content_vertical_margin"
			android:layout_width="match_parent"
			android:layout_height="@dimen/button_height"
			android:background="@drawable/button_style"
			android:text="@string/remove_text"
			android:textColor="@color/white"
			android:textSize="@dimen/text_big"/>

	<Button
			android:id="@+id/favorite"
			android:layout_marginTop="@dimen/content_vertical_margin"
			android:layout_width="match_parent"
			android:layout_height="@dimen/button_height"
			android:background="@drawable/button_style"
			android:text="@string/add_favorite"
			android:textColor="@color/white"
			android:textSize="@dimen/text_big"/>
</LinearLayout>
